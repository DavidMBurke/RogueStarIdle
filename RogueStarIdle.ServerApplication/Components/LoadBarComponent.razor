<div style=@("border: solid black 1px; width: 100%; height: 100%; display:flex; align-items: center; justify-content: center;" + LoadBarStyle(amountComplete, total, color))>
    <text style="font-size: 8px; align-content: center; text-align: center;">@(amountComplete) / @(total)</text>
</div>

@code {
        [Parameter]
        public int amountComplete { get; set; }
        [Parameter]
        public int total { get; set; }
        [Parameter]
        public string color { get; set; }

    private string LoadBarStyle(int num, int denom, string colorChoice)
    {
        int percent = num * 100 / denom;
        return $"background: linear-gradient(to right, {colorChoice} {percent}%, transparent {percent}%);";
    }
}
