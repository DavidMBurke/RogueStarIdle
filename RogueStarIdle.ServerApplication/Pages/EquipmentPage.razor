@code {
    public Character selectedCharacter = new Character();

    protected override void OnInitialized()
    {
        selectedCharacter = characterState.MainCharacter;
    }

    private RenderFragment displayEquipment(string slotName, Item equipment)
    {
        if (equipment == null)
        {
            return @<text>@slotName</text>;
        }
        RenderFragment imageMarkup =@<img src=@equipment.Thumbnail style="width:100%"/>;
        return imageMarkup;
    }

    private void unEquip(EquipmentSlot equipmentSlot)
    {
        if (equipmentSlot.Item == null)
        {
            return;
        }
        Item unequippedItem = equipmentSlot.Item.CreateCopy();
        inventoryState.RemoveFromInventory(inventoryState.Inventory, unequippedItem, unequippedItem.Quantity);
        unequippedItem.Equipped = false;
        inventoryState.AddToInventory(inventoryState.Inventory, unequippedItem, unequippedItem.Quantity);
        equipmentSlot.Item = null;
    }

    private RenderFragment getTotalEquipmentStatRender(EquipmentSet equipment)
    {
        equipment.CalculateStats(characterState.MainCharacter);
        Stats s = equipment.Stats;
        RenderFragment frag =
        @<div>
            <li>Attack Speed: @s.AttackSpeed</li>
            @weaponDamageMarkup("Slashing", s.SlashingDamageMin, s.SlashingDamageMax)
            @weaponDamageMarkup("Piercing", s.PiercingDamageMin, s.PiercingDamageMax)
            @weaponDamageMarkup("Crushing", s.CrushingDamageMin, s.CrushingDamageMax)
            @weaponDamageMarkup("Fire", s.FireDamageMin, s.FireDamageMax)
            @weaponDamageMarkup("Acid", s.AcidDamageMin, s.AcidDamageMax)
            @weaponDamageMarkup("Poison", s.PoisonDamageMin, s.PoisonDamageMax)
            @weaponDamageMarkup("Shock", s.ShockDamageMin, s.ShockDamageMax)
            @defenseMarkup("Kinetic", s.KineticDefense)
            @defenseMarkup("Energy", s.EnergyDefense)
            @defenseMarkup("Psychic", s.PsychicDefense)
            @defenseMarkup("Melee", s.MeleeDefense)
            @defenseMarkup("Ranged", s.RangedDefense)
            @defenseMarkup("Explosive", s.ExplosiveDefense)
            @damageResistanceMarkup("Energy", s.EnergyDR)
            @damageResistanceMarkup("Fire", s.FireDR, s.EnergyDR)
            @damageResistanceMarkup("Acid", s.AcidDR, s.EnergyDR)
            @damageResistanceMarkup("Poison", s.PoisonDR, s.EnergyDR)
            @damageResistanceMarkup("Shock", s.ShockDR, s.EnergyDR)
            @damageResistanceMarkup("Kinetic", s.KineticDR)
            @damageResistanceMarkup("Piercing", s.PiercingDR, s.KineticDR)
            @damageResistanceMarkup("Slashing", s.SlashingDR, s.KineticDR)
            @damageResistanceMarkup("Crushing", s.CrushingDR, s.KineticDR)
        </div>;
        return frag;
    }

    RenderFragment? weaponDamageMarkup(string type, int minDamage, int maxDamage)
    {
        if (minDamage <= 0 && maxDamage <= 0)
        {
            return null;
        }
        return @<li>@minDamage - @maxDamage Slashing Damage</li>;
    }

    RenderFragment? defenseMarkup(string type, int defense)
    {
        if (defense <= 0)
        {
            return null;
        }
        return@<li>@type Defense: @defense</li>;
    }

    RenderFragment damageResistanceMarkup(string type, int resistance)
    {
        if (resistance <= 0)
        {
            return null;
        }
        return @<li>@type Damage Resistance: @resistance</li>;
    }

    RenderFragment damageResistanceMarkup(string type, int resistance, int parentResistance)
    {
        if (resistance > 0 && resistance > parentResistance)
        {
            return @<li>@type Damage Resistance: @resistance</li>;
        }
        return null;
    }
}
